{
  "$schema": "https://raw.githubusercontent.com/vercel/vercel/main/schema.json",
  "version": 2,
  "build": {
    "env": {},
    "rootDirectory": "frontend",
    "buildCommand": "npm run build",
    "devCommand": "npm run dev",
    "outputDirectory": "frontend/dist"
  },
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/dist/index.html"
    }
  ],
  "functions": {
    "api/server.js": {
      "memory": 128,
      "maxDuration": 10
    }
  }
}
